<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/activity_background"
    android:clipToPadding="true"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/huawenxingkai"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:textColor="@color/white"
        android:background="@color/titlecolor"
        android:text="华  文  行  楷"
        android:textSize="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/typefacetextView"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/katongjianti"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:textColor="@color/white"
        android:background="@color/titlecolor"
        android:text="卡  通  简  体"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/huawenxingkai"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/wawaziti"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:textColor="@color/white"
        android:background="@color/titlecolor"
        android:text="娃  娃  字  体"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/katongjianti"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/youyuan"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:textColor="@color/white"
        android:background="@color/titlecolor"
        android:text="幼  圆  字  体"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/wawaziti"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/initTypeface"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:textColor="@color/white"
        android:background="#1e8c52"
        android:text="恢 复 默 认 字 体"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="18dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/typefacetextView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:paddingTop="20dp"
        android:layout_marginStart="25dp"
        android:text="@string/app_introduction"
        android:layout_marginRight="16dp"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/text"
        android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>
