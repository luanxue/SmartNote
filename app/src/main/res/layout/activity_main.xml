<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a99460.smartnote.MainActivity"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@color/activity_background">

    <include layout="@layout/main_title"/>

<ListView
    android:layout_marginTop="72dp"
    android:visibility="visible"
    android:divider="@drawable/listview_shade"
    android:dividerHeight="10dp"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textStyle="bold"
    android:textColor="#3a3f3a">
</ListView>

    <android.support.design.widget.FloatingActionButton
    android:id="@+id/fab"
    app:elevation="10dp"
    android:visibility="visible"
    android:src="@drawable/add2"
    app:rippleColor="@color/yellow"
    app:backgroundTint="@color/titlecolor"
    android:layout_gravity="bottom|center"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_margin="22dp"
    />

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="280dp"
        android:layout_height="36dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:textColorHint="#fac198"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:background="@drawable/search_et_bg"
            android:drawableLeft="@drawable/find_note"
            android:hint="请输入搜索内容"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="72dp"
        android:id="@+id/find_note_linear"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/search_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

        </ListView>


    </LinearLayout>

</FrameLayout>
    <android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:menu="@menu/nav_menu"
    app:headerLayout="@layout/nav_header"/>
</android.support.v4.widget.DrawerLayout>